<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CreateCampaignFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/layout_horizontal"
            android:layout_marginVertical="@dimen/layout_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Camp_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Campaign Name"
                android:textSize="@dimen/text_normal"
                android:paddingStart="2dp"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/Input_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/customize_campaign_input"
                android:ems="10"
                android:inputType="text"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/Camp_Desp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Campaign Description"
                android:textSize="@dimen/text_normal"
                android:paddingStart="2dp"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/Input_Desp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:gravity="top"
                android:layout_marginTop="10dp"
                android:background="@drawable/customize_campaign_input"
                android:ems="10"
                android:inputType="textMultiLine"
                android:padding="14dp"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/Camp_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Image URL"
                android:textSize="@dimen/text_normal"
                android:paddingStart="2dp"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />
            <EditText
                android:id="@+id/Input_Img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/customize_campaign_input"
                android:ems="10"
                android:inputType="textUri"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/Camp_Target_Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Target Amount"
                android:textSize="@dimen/text_normal"
                android:paddingStart="2dp"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Target_group">
                <EditText
                    android:id="@+id/Input_Target_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/customize_cam_in_r"
                    android:ems="10"
                    android:inputType="number"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/customize_cam_in_l"
                    android:text="ETH"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_normal"
                    android:gravity="center"
                    tools:ignore="MissingConstraints">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/Camp_Minimum_Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Minimum Contribution Amount"
                android:textSize="@dimen/text_normal"
                android:paddingStart="2dp"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/Minimum_group"
                app:layout_constraintTop_toBottomOf="@id/Camp_Minimum_Amount"
                >
                <EditText
                    android:id="@+id/Input_Minimum_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/customize_cam_in_r"
                    android:ems="10"
                    android:inputType="number"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/customize_cam_in_l"
                    android:text="ETH"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_normal"
                    android:gravity="center"
                    tools:ignore="MissingConstraints">
                </TextView>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btndonate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35mdp"
                android:layout_marginVertical="@dimen/_20mdp"
                android:background="@drawable/rounded_blue_btn"
                android:gravity="center"
                android:text="Create Campaign"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>