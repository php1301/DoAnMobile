<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DonateFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_horizontal"
            android:layout_marginVertical="@dimen/layout_vertical"
            android:paddingBottom="@dimen/padding_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/content_horizontal"
                android:layout_marginVertical="@dimen/content_vertical"
                android:paddingHorizontal="@dimen/padding_horizontal"
                android:paddingVertical="@dimen/padding_vertical"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:elevation="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textVIew1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Campaign Balance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large">
                </TextView>

                <TextView
                    android:id="@+id/textViewCurrentBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="5500 ETH"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xlarge"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/textTargetBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Target of 10000 ETH"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal">
                </TextView>

                <ProgressBar
                    android:id="@+id/pgb_campaign"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_8mdp"
                    android:layout_marginVertical="@dimen/_10mdp"
                    android:progress="50"
                    android:max="100"
                    android:progressTint="@color/aquamarine"
                    android:scaleY="2"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    app:layout_constraintTop_toBottomOf="@id/txtv_name_campaign"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Wallet Address of Campaign Creator"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large">
                </TextView>

                <TextView
                    android:id="@+id/walletAdressOfCamCrea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0x5d7676dB6119Ed1F6C696419058310D16a..."
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/content_horizontal"
                android:layout_marginVertical="@dimen/content_vertical"
                android:paddingHorizontal="@dimen/padding_horizontal"
                android:paddingVertical="@dimen/padding_vertical"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:elevation="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Your wallet address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large">
                </TextView>

                <TextView
                    android:id="@+id/yourWalletAdress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0x5d7676dB6119Ed1F6C696419058310D16a..."
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Donation amount"
                    android:layout_marginTop="@dimen/margin_top"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5mdp"
                    android:id="@+id/Target_group" >
                    <EditText
                        android:id="@+id/Input_Target_Amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/customize_cam_in_r"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />
                    <TextView
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/customize_cam_in_l"
                        android:text="ETH"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_normal"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="MissingConstraints"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="~200 USD"
                    android:textColor="#76000000"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="">
                </TextView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btndonate1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30mdp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:gravity="center"
                    android:clickable="true"
                    android:text="Donate"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal"
                    android:background="@drawable/rounded_blue_btn"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

