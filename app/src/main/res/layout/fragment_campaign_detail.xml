<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CampaignDetailFragment"
    tools:ignore="MissingConstraints"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/layout_vertical"
            android:layout_marginHorizontal="@dimen/layout_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgv_avatar_organization"
                        android:layout_width="@dimen/_40mdp"
                        android:layout_height="@dimen/_40mdp"
                        android:src="@color/teal_200" />

                    <TextView
                        android:id="@+id/txtv_name_organization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:text="Organization"
                        android:textSize="@dimen/text_normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgv_avatar_organization"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:src="@drawable/ic_verified"
                        android:tint="@color/blue_mbg"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/txtv_name_organization"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_campaign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10mdp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgv_img_campaign"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150mdp"
                        android:maxHeight="@dimen/_100mdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/campaignimg"
                        android:transitionName="anim_campaign"
                        app:shapeAppearanceOverlay="@style/imgv_rounded" />

                    <TextView
                        android:id="@+id/txtv_name_campaign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10mdp"
                        android:text="COVID-19 Vaccine Support Fund"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/imgv_img_campaign" />

                    <ProgressBar
                        android:id="@+id/pgb_campaign"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_8mdp"
                        android:layout_marginVertical="@dimen/_10mdp"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/aquamarine"
                        android:scaleY="2"
                        app:layout_constraintTop_toBottomOf="@id/txtv_name_campaign" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10mdp"
                        app:layout_constraintTop_toBottomOf="@id/pgb_campaign">

                        <LinearLayout
                            android:id="@+id/linearLayout_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtv_gain_eth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5500"
                                android:textColor="@color/blue_mbg"
                                android:textSize="@dimen/text_xlarge"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtv_target_eth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/10000 ETH"
                                android:textColor="@color/darkgray"
                                android:textSize="@dimen/text_xlarge" />

                        </LinearLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/crv_dayleft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/Theme.MaterialComponents.Light"
                            app:cardCornerRadius="@dimen/_20mdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/linearLayout_money"
                            app:layout_constraintTop_toTopOf="parent">

                            <Button
                                android:id="@+id/btn_withdrawal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="@dimen/_8mdp"
                                android:text="View Withdrawal"
                                android:textColor="@color/blue_mbg"
                                android:textSize="@dimen/text_small" />

                        </com.google.android.material.card.MaterialCardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/constraint_detail"
                        tools:layout_editor_absoluteX="-169dp">

                        <LinearLayout
                            android:id="@+id/linear_achieve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtv_achieve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Achieve"
                                android:textColor="@color/darkgray"
                                android:textSize="@dimen/text_normal" />

                            <TextView
                                android:id="@+id/txtv_percent_campaign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="55%"
                                android:textSize="@dimen/text_large"
                                app:layout_constraintTop_toBottomOf="@id/txtv_achieve" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10mdp"
                            android:orientation="vertical"
                            app:layout_constraintStart_toEndOf="@+id/linear_achieve">

                            <TextView
                                android:id="@+id/txtv_numdonate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Num of donation"
                                android:textColor="@color/darkgray"
                                android:textSize="@dimen/text_normal"
                                app:layout_constraintStart_toEndOf="@id/txtv_achieve"
                                app:layout_constraintTop_toBottomOf="@id/txtv_gain_eth" />

                            <TextView
                                android:id="@+id/txtv_numdonate_campaign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="105"
                                android:textSize="@dimen/text_large"
                                app:layout_constraintStart_toEndOf="@id/txtv_percent_campaign"
                                app:layout_constraintTop_toBottomOf="@id/txtv_achieve" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtv_lb_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Campaign Information"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteY="250dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btndonate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30mdp"
                    android:layout_marginVertical="@dimen/_10mdp"
                    android:background="@drawable/rounded_blue_btn"
                    android:gravity="center"
                    android:text="Donate"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/content_space"
                android:background="@color/darkgray"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/content_vertical">

                <TextView
                    android:id="@+id/txtv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/text_normal"
                    android:text="This Campaign is to Donate Funds for Covid Relief in India, the situation. The manager is https://twitter.com/harshbadhai28 and all the receives will go to ABCD Foundation which will help in buying, delivering oxygen, and other covid related help. If you want to withdraw funds from this campaign please feel free to create a request, and ping me on Twitter so that I can help you get the funds as soon as possible."/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/content_space"
                android:background="@color/darkgray"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_vertical"
                android:layout_marginBottom="@dimen/_30mdp">

                <TextView
                    android:id="@+id/txtv_lb_donorslist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Road map"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_donors_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtv_lb_donorslist"/>

<!--                <ListView-->
<!--                    android:id="@+id/listViewDonorsList"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:foregroundGravity="center"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/txtv_lb_donorslist"/>-->
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>