<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:layout_marginBottom="14dp"
    android:padding="10dp"
    android:background="@drawable/btn_frame"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_person_outline_24"
        android:background="@drawable/oval_shape"
        android:backgroundTint="@color/gray_oval"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/name_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Quá»¹ vaccine..."
            android:textSize="18sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/time_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2 hours ago"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:gravity="center"
        android:text="- 1.5 ETH"
        android:textColor="@color/text_value"
        android:textSize="18sp" />
</LinearLayout>