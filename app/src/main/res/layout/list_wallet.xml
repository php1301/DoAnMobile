<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout_wallet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/content_vertical"
        android:layout_marginHorizontal="@dimen/_5mdp"
        app:cardElevation="@dimen/_3mdp"
        app:cardPreventCornerOverlap="true"
        app:shapeAppearance="@style/ShapeAppearance.Material3.MediumComponent.Rounded"
        android:theme="@style/Theme.MaterialComponents.Light">

        <LinearLayout
            android:id="@+id/linearLayout_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5mdp"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgv_wallet"
                android:layout_width="@dimen/_40mdp"
                android:layout_height="@dimen/_40mdp"
                android:src="@color/teal_200"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/name_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Wallet"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/address_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="address..."
                    android:textSize="@dimen/text_normal"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>