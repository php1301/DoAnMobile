<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_dashboard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40mdp"
        app:titleCentered="true"
        android:background="@color/blue_mbg"
        app:title=""
        app:navigationIconTint="@color/white"
        app:titleTextColor="@color/white"
        android:gravity="center"
        app:theme="@style/ToolbarTheme"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_bottom_nav_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:defaultNavHost="true"
        app:navGraph="@navigation/navgraph"
        app:layout_constraintTop_toBottomOf="@id/toolbar_dashboard"
        android:theme="@style/AppTheme.NoActionBar"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50mdp"
        android:background="@color/white"
        app:itemIconTint="@drawable/bottomnav_color_selector"
        app:itemIconSize="@dimen/_25mdp"
        android:contextClickable="true"
        app:menu="@menu/bottomnav"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_bottom_nav_container">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="58dp"
            android:layout_height="56dp"
            android:layout_weight="0.5"
            android:background="@drawable/blue_oval_shape"
            android:src="@drawable/ic_add_circle_outline" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>