<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AccountFragment">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayoutatAccountFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_horizontal"
            android:layout_marginVertical="@dimen/layout_vertical"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/avatar_bg"
                    android:layout_width="@dimen/_80mdp"
                    android:layout_height="@dimen/_80mdp"
                    app:cardCornerRadius="250dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >
                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/oval_shape"
                        android:scaleType="center"
                        android:src="@drawable/ic_person_outline_24"
                        android:backgroundTint="@color/gray_oval"
                        android:contentDescription="Avatar" />
                </androidx.cardview.widget.CardView>

                <ImageButton
                    android:id="@+id/btn_avatar"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/blue_oval_shape"
                    android:contentDescription="Choose a picture"
                    android:src="@drawable/ic_camera_24"
                    android:translationZ="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/avatar_bg"
                    app:layout_constraintEnd_toEndOf="@+id/avatar_bg"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/avatar_bg"
                    app:layout_constraintTop_toTopOf="@+id/avatar_bg"
                    app:layout_constraintVertical_bias="1.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/constraintlayout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                app:layout_constraintTop_toBottomOf="@+id/constraintlayout_avatar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/label_personal_inf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5mdp"
                        android:text="@string/personal_information"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgv_edit_per_inf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/_5mdp"
                        android:contentDescription="Edit"
                        app:srcCompat="@drawable/ic_edit"
                        app:tint="@color/darkgray">
                    </ImageView>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/label_personal_inf"
                    android:layout_marginHorizontal="@dimen/_5mdp"
                    android:layout_marginVertical="@dimen/_5mdp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgv_edit_per_inf">

                    <TableLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/padding_horizontal"
                        android:paddingVertical="@dimen/padding_vertical">

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/label_name"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="Name"
                                android:textColor="#000000" />

                            <ViewSwitcher
                                android:id="@+id/switch_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/text_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Mobile"
                                    android:textColor="#000000" />

                                <EditText
                                    android:id="@+id/edittext_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:paddingTop="0dp"
                                    android:text="Name"
                                    android:textSize="14dp" />

                            </ViewSwitcher>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/label_username"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/username"
                                android:textColor="#050505" />

                            <ViewSwitcher
                                android:id="@+id/switch_username"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/text_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Mobile"
                                    android:textColor="#000000" />

                                <EditText
                                    android:id="@+id/edittext_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:paddingTop="0dp"
                                    android:text="Name"
                                    android:textSize="14dp" />

                            </ViewSwitcher>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/label_email"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/email"
                                android:textColor="#0B0B0B" />

                            <ViewSwitcher
                                android:id="@+id/switch_email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/text_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:autoLink="email"
                                    android:text="abc@gmail.com"
                                    android:textColor="#000000"
                                    android:textColorLink="@color/black" />

                                <EditText
                                    android:id="@+id/edittext_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="textEmailAddress"
                                    android:paddingTop="0dp"
                                    android:text="abc@gmail.com"
                                    android:textSize="14dp" />

                            </ViewSwitcher>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/label_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/phone"
                                android:textColor="#000000" />

                            <ViewSwitcher
                                android:id="@+id/switch_phone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/text_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="0123456789"
                                    android:textColor="#000000" />

                                <EditText
                                    android:id="@+id/edittext_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="phone"
                                    android:paddingTop="0dp"
                                    android:text="0123456789"
                                    android:textSize="14dp" />

                            </ViewSwitcher>
                        </TableRow>
                    </TableLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_20mdp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/constraintlayout_info">

                <ImageView
                    android:id="@+id/imgv_facebook"
                    android:layout_width="@dimen/_40mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:clickable="true"
                    android:src="@drawable/ic_facebook">
                </ImageView>

                <Space
                    android:layout_width="@dimen/_10mdp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgv_insta"
                    android:layout_width="@dimen/_40mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:clickable="true"
                    android:src="@drawable/ic_instagram">
                </ImageView>

                <Space
                    android:layout_width="@dimen/_10mdp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imgv_youtube"
                    android:layout_width="@dimen/_40mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:clickable="true"
                    android:src="@drawable/ic_youtube">
                </ImageView>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>